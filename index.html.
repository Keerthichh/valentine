      "Momoooo pls ğŸ˜­",
      "Kekeee is watching ğŸ‘€",
      "Okay OKAY ğŸ˜°"
    ];

    noBtn.addEventListener("mouseover", () => {
      panicLevel++;

      const moveRange = 80 + panicLevel * 40;
      const x = Math.random() * moveRange - moveRange / 2;
      const y = Math.random() * moveRange - moveRange / 2;

      noBtn.style.transform = `translate(${x}px, ${y}px)`;

      if (panicLevel < panicTexts.length) {
        noBtn.innerText = panicTexts[panicLevel];
      }
    });

    noBtn.addEventListener("click", () => {
      card.innerHTML = `
        <h1>ğŸ˜</h1>
        <p>
          Nice try, Momoooo.<br>
          We both know that button is decorative ğŸ’–
        </p>
      `;
    });

    yesBtn.addEventListener("click", () => {
      card.innerHTML = `
        <h1>Forever YES ğŸ’˜</h1>
        <p>
